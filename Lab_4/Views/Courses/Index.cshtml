
@model Lab_4.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm("Create", "Course"))
{
    @Html.AntiForgeryToken()
    <h2>Create</h2>
    <form>
        <div class="form-group">
            @Html.LabelFor(m => m.Place)
            @Html.TextBoxFor(m => m.Place, new { @class = "from-control" });
            @Html.ValidationMessageFor(m => m.Place)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date)
            @Html.TextBoxFor(m => m.Date, new { @class = "from-control" });
            @Html.ValidationMessageFor(m => m.Date)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Time)
            @Html.TextBoxFor(m => m.Time, new { @class = "from-control" });
            @Html.ValidationMessageFor(m => m.Time)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Categories)
            @Html.DropDownListFor(m => m.Category, new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" });
            @Html.ValidationMessageFor(m => m.Categories)
        </div>

        <button type="submit" value="Save" class="btn btn-primary">Save</button>
    </form>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}